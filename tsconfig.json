{
  "compilerOptions": {
    "noEmit": false,
    "rootDir": ".",
    "outDir": "bundle",
    "declaration": false,
    "target": "ES6",
    "lib": ["ES6", "DOM"],
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "src/*.test.ts", "test"],
}
